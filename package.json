{
  "name": "github-actions-mediawiki-uploader",
  "version": "2.0.0",
  "description": "Upload text file to mediawiki instance using MW API",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShinyColorsWiki/github-actions-mediawiki-uploader.git"
  },
  "keywords": [
    "mediawiki",
    "github-actions"
  ],
  "author": "MPThLee <mpthlee@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShinyColorsWiki/github-actions-mediawiki-uploader/issues"
  },
  "homepage": "https://github.com/ShinyColorsWiki/github-actions-mediawiki-uploader#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "mwn": "^2.0.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^8.33.0",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-jest": "^28.9.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
